{
  "name": "iobroker.rest-api",
  "version": "3.1.3",
  "description": "RESTful interface for ioBroker with GUI.",
  "author": {
    "name": "bluefox",
    "email": "dogafox@gmail.com"
  },
  "contributors": [],
  "homepage": "https://github.com/ioBroker/ioBroker.rest-api",
  "keywords": [
    "ioBroker",
    "rest-api",
    "swagger-ui",
    "web"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/ioBroker.rest-api"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "@iobroker/socket-classes": "^2.2.21",
    "@iobroker/webserver": "^1.3.3",
    "@iobroker/ws-server": "^4.3.9",
    "@iobroker/js-controller-common-db": "^7.1.0",
    "axios": "^1.13.5",
    "body-parser": "^2.2.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.1.1",
    "@alcalzone/release-script-plugin-iobroker": "^5.1.1",
    "@alcalzone/release-script-plugin-license": "^5.1.1",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@iobroker/types": "^7.1.0",
    "@types/body-parser": "^1.19.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "typescript": "~5.9.3"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.rest-api/issues"
  },
  "main": "build/main.js",
  "files": [
    "admin/",
    "img/",
    "build/",
    "examples/",
    "LICENSE",
    "io-package.json"
  ],
  "scripts": {
    "build": "npm run build:ts && node tasks --copy-yaml",
    "build:all": "npm run build:ts && node tasks",
    "build:ts": "tsc -p tsconfig.build.json",
    "update-list": "node tasks --generate-list",
    "test:integration": "mocha --exit",
    "test:package": "mocha test/testPackage.js --exit",
    "test": "npm run test:integration",
    "lint": "eslint -c eslint.config.mjs",
    "release": "release-script",
    "release-patch": "release-script patch --yes --no-update-lockfile",
    "release-minor": "release-script minor --yes --no-update-lockfile",
    "release-major": "release-script major --yes --no-update-lockfile",
    "translate": "translate-adapter",
    "update-packages": "npx -y npm-check-updates --upgrade",
    "npm": "npm i"
  },
  "license": "Apache-2.0"
}
